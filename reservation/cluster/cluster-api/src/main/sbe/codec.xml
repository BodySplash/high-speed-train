<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/2016/sbe"
                   package="reservation.cluster.api"
                   id="1"
                   version="1"
                   semanticVersion="5.2"
                   description="Our little protocol"
                   byteOrder="littleEndian">

    <types>
        <composite name="messageHeader" description="Message identifiers and length of message root">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="templateId" primitiveType="uint16"/>
            <type name="schemaId" primitiveType="uint16"/>
            <type name="version" primitiveType="uint16"/>
        </composite>
        <composite name="groupSizeEncoding" description="Repeating group dimensions">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="numInGroup" primitiveType="uint16"/>
        </composite>
        <composite name="varStringEncoding">
            <type name="length" primitiveType="uint32" maxValue="1073741824"/>
            <type name="varData" primitiveType="uint8" length="0" characterEncoding="UTF-8"/>
        </composite>
        <composite name="varDataEncoding">
            <type name="length" primitiveType="uint32" maxValue="1073741824"/>
            <type name="varData" primitiveType="uint8" length="0"/>
        </composite>

        <type name="CoachId" primitiveType="char"/>
        <type name="CorrelationId" primitiveType="uint64"/>
        <type name="TrainId" primitiveType="uint16"/>

    </types>

    <sbe:message id="1" name="CreateTrain">
        <field id="1" name="correlationId" type="CorrelationId"/>
        <field id="2" name="coachesNumber" type="uint16"/>
        <field id="3" name="seatsNumber" type="uint16"/>
    </sbe:message>

    <sbe:message id="2" name="CreateTrainResponse">
        <field id="1" name="correlationId" type="CorrelationId"/>
        <field id="2" name="trainId" type="TrainId"/>
    </sbe:message>

    <sbe:message id="3" name="ReservationRequest">
        <field id="1" name="correlationId" type="CorrelationId"/>
        <field id="2" name="trainId" type="TrainId"/>
        <field id="3" name="seatsNumber" type="uint16"/>
    </sbe:message>

    <sbe:message id="4" name="ReservationRequestResponse">
        <field id="1" name="correlationId" type="CorrelationId"/>
        <field id="2" name="trainId" type="TrainId"/>
        <group id="3" name="seats">
            <field id="31" name="coach" type="CoachId"/>
            <field id="32" name="number" type="uint16"/>
        </group>
    </sbe:message>
</sbe:messageSchema>